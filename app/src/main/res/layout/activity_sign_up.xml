<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="580dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="34dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/regButton"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confpassTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="103dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="97dp"
                android:background="@drawable/buttonshape"
                android:text="Sign Up" />

            <TextView
                android:id="@+id/signintxt"
                android:layout_width="112dp"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="104dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="96dp"
                android:text="Sign Up"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#512D6D" />

            <EditText
                android:id="@+id/confpassTxt"
                android:layout_width="238dp"
                android:layout_height="51dp"
                android:layout_below="@+id/passTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="#BFA2DB"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="307dp" />

            <EditText
                android:id="@+id/passTxt"
                android:layout_width="238dp"
                android:layout_height="51dp"
                android:layout_below="@+id/phnTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="#BFA2DB"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="307dp" />


            <EditText
                android:id="@+id/nameText"
                android:layout_width="238dp"
                android:layout_height="53dp"
                android:layout_below="@+id/signintxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="#BFA2DB"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="307dp" />

            <EditText
                android:id="@+id/emailText"
                android:layout_width="238dp"
                android:layout_height="53dp"
                android:layout_below="@+id/nameText"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="#BFA2DB"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="307dp" />

            <ProgressBar
                android:id="@+id/progressBarReg"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="152dp"
                android:layout_marginTop="244dp"
                android:layout_marginEnd="144dp"
                android:layout_marginBottom="304dp"
                android:elevation="5dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/phnTxt"
                android:layout_width="238dp"
                android:layout_height="53dp"
                android:layout_below="@+id/emailText"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="#BFA2DB"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="307dp" />

            <TextView
                android:id="@+id/backtologinpage"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="80dp"
                android:text="Already have an account?Sign In"
                android:textColor="#512D6D"
                android:textSize="12sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>